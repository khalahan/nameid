<!-- Install Manifest for the Firefox plugin.  -->

<RDF xmlns="http://www.w3.org/1999/02/22-rdf-syntax-ns#"
     xmlns:em="http://www.mozilla.org/2004/em-rdf#">
  <Description about="urn:mozilla:install-manifest">

    <em:id>login@nameid.org</em:id>
    <em:version>0.1.1a</em:version>

    <em:name>NameID Easy Login</em:name>
    <em:description>This Add-On manages the challenge signing for easier
login to NameID for you.  No more dealing with the
command-line!</em:description>

    <em:creator>Daniel Kraft</em:creator>
    <!-- TODO: Replace with https once that is working!  -->
    <em:homepageURL>http://nameid.org/</em:homepageURL>

    <em:optionsURL>chrome://nameid-login/content/preferences.xul</em:optionsURL>

    <em:type>2</em:type>
    <em:bootstrap>true</em:bootstrap>
    <em:targetApplication>
      <Description>
        <em:id>{ec8030f7-c20a-464f-9b0e-13a3a9e97384}</em:id>
        <em:minVersion>4.0</em:minVersion>
        <em:maxVersion>22.*</em:maxVersion>
      </Description>
    </em:targetApplication>

  </Description>
</RDF>
